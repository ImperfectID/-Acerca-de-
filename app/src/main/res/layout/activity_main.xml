<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/fondo"
    tools:context="com.example.rodri.info.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="4dp"
        android:id="@+id/nombre"
        android:textSize="30dp"
        android:textColor="#fff"
        android:text="Rodrigo Martinez"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre"
        android:layout_centerInParent="true"
        android:text="Ingeniero en Sistemas"
        android:textColor="#fff"
        android:id="@+id/titulo"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/IMG_20170816_170807"
        android:id="@+id/imageView" />

    <LinearLayout
        android:id="@+id/lay"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titulo">


        <LinearLayout
            android:id="@+id/git"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="59dp"
                android:layout_height="55dp"
                android:src="@drawable/Github" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="ImperfectID"
                android:textColor="#fff" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="59dp"
                android:layout_height="45dp"
                android:src="@drawable/Tel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"
                android:text="79168616"
                android:textColor="#fff" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@id/lay"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"

        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/twitter"
            >

            <ImageView
                android:layout_width="49dp"
                android:layout_height="55dp"
                android:src="@drawable/twitter2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="8dp"
                android:textColor="#fff"
                android:text="'@ImperfectID7" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mail"
                android:layout_marginLeft="40dp"
                >

                <ImageView
                    android:layout_width="49dp"
                    android:layout_height="45dp"
                    android:src="@drawable/mail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="#fff"
                    android:textSize="13dp"
                    android:text="00172216@uca.edu.sv" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000"

        android:text="powered by: Rodrigo Martinez" />

</RelativeLayout>
